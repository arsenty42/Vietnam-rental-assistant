// Rental data structure
interface RentalOption {
  city: string;
  shop: string;
  contact: string;
  bikes: Array<{
    model: string;
    pricePerDay: string;
    photo?: string;
    available: boolean;
  }>;
  discount?: string;
  delivery: string;
  requirements: string[];
  rating?: number;
}

// Mock rental database (in real app, this would connect to actual APIs)
const RENTAL_DATABASE: RentalOption[] = [
  {
